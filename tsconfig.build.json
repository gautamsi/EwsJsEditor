{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": false,
    "watch": true
  },
  "exclude": [
    "src/browser/",
    "node_modules",
    "aurelia_project",
    "./index.js",
    "src/environment.ts"
  ]  
}
